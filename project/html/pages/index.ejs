          <option value="alex">Alex Moffat</option>
          <option value="kyle">Kyle Mooney</option>
          <option value="chris">Chris Redd</option>
          <option value="melissa">Melissa Villasenor</option>
          <option value="chloe">Chloe Fineman</option>
          <option value="ego">Ego Nwodim</option>
          <option value="bowen">Bowen Yang</option>
        </select>

        <button id="add-post" type="submit" class="btn btn-default" onclick="handleMessageFormSubmit()">
